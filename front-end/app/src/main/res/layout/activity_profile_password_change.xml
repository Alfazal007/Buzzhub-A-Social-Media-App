<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    tools:context=".profile_password_changeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/nav"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backtoprofile_pass"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/arrowleft"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/profile_username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Password Change"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>


    <EditText
        android:id="@+id/old_passwordchange"
        android:layout_width="290dp"
        android:layout_height="43dp"
        android:background="@drawable/blueborder"
        android:fontFamily="@font/poppins"
        android:hint="Old Password"
        android:layout_marginLeft="55dp"
        android:inputType="text"
        android:layout_marginTop="120dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:textColorHint="@color/hintcolor" />

    <EditText
        android:id="@+id/new_passwordchange"
        android:layout_width="290dp"
        android:layout_height="43dp"
        android:background="@drawable/blueborder"
        android:fontFamily="@font/poppins"
        android:hint="New Password"
        android:layout_marginLeft="55dp"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:textColorHint="@color/hintcolor" />

    <Button
        android:id="@+id/changepass_button"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="55dp"
        android:gravity="center"
        android:text="Change Password"
        app:cornerRadius ="7dp"/>

</LinearLayout>